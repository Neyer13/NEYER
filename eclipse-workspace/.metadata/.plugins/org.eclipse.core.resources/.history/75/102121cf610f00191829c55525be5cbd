
public class Palandrome {
	
	String mot;
	String inverse
	
	public Palandrome(String mot) {
		
		this.mot=mot;
		
	}
	
	public void inverser() {
		
		inverse = new StringBuilder(mot).reverse().toString();
		
		System.out.println("L'inverse de "+mot+" est "+inverse);
		
	}
	
	public void testPalindrome() {
		
		if(inverse==mot) {
			
		}
		
	}

}
