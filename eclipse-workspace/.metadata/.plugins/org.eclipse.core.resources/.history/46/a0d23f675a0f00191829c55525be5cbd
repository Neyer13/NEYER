
public class Segment {

	int segMax;
	int segMin;
	int testSegment;
	
	public Segment(int segMax,int segMin){
		this.segMax=segMax;
		this.segMin=segMin;
	}
	
	public void calculeLongueur() {
		
		if(segMax<segMin) {
			
			int cash = segMin;
			segMin = segMax;
			segMax=cash;
			
		}
		
		System.out.println("Longeur du segment [");
		
	}
	
	
}
